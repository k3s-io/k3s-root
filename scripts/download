#!/usr/bin/env bash

set -eux -o pipefail

export BUILDROOT_VERSION=2021.02.3

mkdir -p /usr/src/buildroot

# curl -fL https://buildroot.org/downloads/buildroot-${BUILDROOT_VERSION}.tar.bz2 | tar xj - -C /usr/src/buildroot --strip-components=1
curl -fL https://github.com/buildroot/buildroot/archive/refs/tags/${BUILDROOT_VERSION}.tar.gz | tar xz -C /usr/src/buildroot --strip-components=1
curl -fL https://gitlab.alpinelinux.org/alpine/aports/-/raw/v3.14.2/main/fakeroot/fakeroot-no64.patch --output /usr/src/buildroot/package/fakeroot/0006-alpine-fakeroot-no64.patch
